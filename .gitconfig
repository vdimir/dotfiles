[alias]
    co = checkout
    st = status
    ci = commit -v
	lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %C(cyan)%G?%C(dim white) %an%C(reset)%C(bold yellow)%d%C(reset)'
	br = branch
	au = add -u
	sup = submodule update --init --recursive

[push]
	default = current
[pull]
	rebase = true
[filter "lfs"]
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f
[fetch]
	prune = true
[core]
	autocrlf = input
[user]
	email = vdimir@yandex-team.ru
	name = vdimir
	signingkey = 4DAF2EAE0F5BE1557D5A0F3DF57B3E10A21DBB31
[gpg]
	program = gpg
[commit]
	gpgsign = true
[merge]
	ff = false
[rebase]
	autoStash = true
