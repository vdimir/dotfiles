{
    "telemetry.telemetryLevel": "crash",
    "editor.links": false,
    "editor.tokenColorCustomizations": {
        "[Base16 Grayscale Light]": {
            "comments": {
                "fontStyle": "",
                "foreground": "#606070"
            },
            "functions": "#202030",
            "variables": "#202030",
            "keywords": "#606070",
            "types": "#606070",
            "strings": {
                "foreground": "#606070"
            },
            "numbers": "#606070",
            "textMateRules": [
                {
                    "scope":"keyword",
                    "settings": { "foreground": "#606070" }
                },
                {
                    "scope":"constant",
                    "settings": { "foreground": "#606070" }
                },
                {
                    "scope": "meta.block",
                    "settings": { "foreground": "#202030" }
                },
                {
                    "scope": "entity.name.import.go",
                    "settings": { "fontStyle": "" }
                },
                {
                    "scope": "markup.list",
                    "settings": { "foreground": "#606070" }
                },
                {
                    "scope": ["markup.italic", "markup.bold"],
                    "settings": { "foreground": "#606070" }
                },
                {
                    "scope": ["entity.name.type.class", "entity.name.function", "entity.name"],
                    "settings": { "foreground": "#202030" }
                },
            ]
        },
        "[Base16 Grayscale Dark]": {
            "comments": {
                "fontStyle": "",
                "foreground": "#d0d0d0"
            },
            "functions": "#d0d0d0",
            "variables": "#b0d0d0",
            "keywords": "#b0d0d0",
            "types": "#b0d0d0",
            "strings": "#b0d0d0",
            "textMateRules": [ {
                "scope": [
                    "comment",
                    "constant",
                    "entity",
                    "keyword",
                    "storage",
                    "string",
                    "support",
                    "variable",
                    "meta",
                    "invalid",
                    "markup",
                ],
                "settings": {
                    "foreground": "#d0d0d0"
                }
            },
            ]
        }
    },
    "workbench.colorCustomizations": {
        "[Base16 Grayscale Light]": {
            "editor.background": "#f8f8fa",
            "editorCursor.foreground": "#404040",
            "editor.foreground": "#404040",
            "editor.wordHighlightBorder": "#303030",
            "editor.selectionHighlightBackground": "#f0f0f0",
            "editor.selectionHighlightBorder": "#ababab55",
            "editor.findMatchHighlightBackground": "#FFEEAAAA",
            "editor.findMatchBackground": "#ffddaa55",
            "diffEditor.removedTextBackground": "#f1e6e6",
            "diffEditor.insertedTextBackground": "#c4d1c300",
            "diffEditor.insertedLineBackground": "#c4d1c343",
            "editorBracketHighlight.foreground1": "#202030",
            "editorBracketHighlight.foreground2": "#5d5dd8",
            "editorBracketHighlight.foreground3": "#202030",
        },
        "[Base16 Grayscale Dark]": {
            "editor.background": "#282c32",
            "editorCursor.foreground": "#d4d4d4",
            "editor.foreground": "#d4d4d4",
            "editorBracketHighlight.foreground1": "#d0d0a0",
            "editorBracketHighlight.foreground2": "#a0d0d0",
            "editorBracketHighlight.foreground3": "#d0d0d0",
        },
    },
    "editor.rulers": [140],
    "editor.fontFamily": "'JetBrains Mono'",
    "editor.fontLigatures": true,
    "files.hotExit": "off",
    "files.autoSave": "onFocusChange",
    "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?",
    "editor.occurrencesHighlight": "off",
    "editor.renderWhitespace": "selection",
    "git.ignoreLegacyWarning": true,
    "window.restoreWindows": "none",
    "git.autorefresh": true,
    "git.detectSubmodules": false,
    "search.searchOnType": false,
    "go.useLanguageServer": true,
    "cmake.configureOnOpen": true,
    "githubPullRequests.telemetry.enabled": false,
    "files.insertFinalNewline": true,
    "githubPullRequests.fileListLayout": "tree",
    "remoteHub.search.download.enabled": true,
    "editor.trimAutoWhitespace": true,
    "files.trimTrailingWhitespace": true,
    "python.defaultInterpreterPath": "/opt/homebrew/bin/python3.10",
    "[plaintext]": {
        "editor.trimAutoWhitespace": false,
        "files.trimTrailingWhitespace": false
    },
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.advanced.telemetry.enabled": false,
    "gitlens.blame.avatars": false,
    "gitlens.blame.format": "[${author|7}] ${message|5} ${agoOrDate|10-}",
    "C_Cpp.intelliSenseEngine": "disabled",
    "files.watcherExclude": {
        "_build/": true,
        "build_/": true,
        "build/": true,
        "contrib/": true
    },
    "files.associations": {
        "*.reference.j2": "plaintext"
    },
    "search.exclude": {
        "_build/": true,
        "build_/": true,
        "build/": true,
        "contrib/": true,
    },
    "files.exclude": {
        "_build/": true,
        "build_/": true,
        "build/": true,
        "contrib/": false
    },
    "gitlens.currentLine.enabled": false,
    "gitlens.statusBar.command": "gitlens.toggleFileBlame",
    "sortLines.filterBlankLines": true,
    "[cpp]": {
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
    },
    "cmake.additionalKits": [
        "/opt/homebrew/opt/llvm/bin/",
        "/opt/homebrew/opt/llvm/bin/clang"
    ],
    "editor.unicodeHighlight.allowedLocales": {
        "ru": true
    },
    "editor.unicodeHighlight.nonBasicASCII": false,
    "security.workspace.trust.banner": "always",
    "security.workspace.trust.enabled": false,
    "editor.cursorBlinking": "smooth",
    "editor.inlayHints.enabled": "off",
    "github.copilot.enable": {
        "*": true,
        "plaintext": true,
        "markdown": true,
        "scminput": false,
        "yaml": true,
        "cpp": true
    },
    "terminal.integrated.showExitAlert": false,
    "clangd.arguments": [
        "--header-insertion=never"
    ],
    "terminal.integrated.letterSpacing": 1,
    "terminal.integrated.tabs.enableAnimation": false,
    "terminal.integrated.wordSeparators": " ()[]{}',\"`─‘’~/.-_$!:",
    "[python]": {
        "editor.defaultFormatter": "ms-python.python"
    },
    "terminal.integrated.cursorWidth": 2,
    "githubPullRequests.pullBranch": "never",
    "githubPullRequests.queries": [
        {
            "label": "Local Pull Request Branches",
            "query": "default"
        },
        {
            "label": "Waiting For My Review",
            "query": "repo:${owner}/${repository} is:open review-requested:${user}"
        },
        {
            "label": "Assigned To Me",
            "query": "repo:${owner}/${repository} is:open assignee:${user}"
        },
        {
            "label": "Created By Me",
            "query": "repo:${owner}/${repository} is:open author:${user}"
        },
        {
            "label": "All Open",
            "query": "default"
        }
    ],
    "window.autoDetectColorScheme": true,
    "workbench.preferredLightColorTheme": "Base16 Grayscale Light",
    "workbench.preferredDarkColorTheme": "Base16 Grayscale Light",
    "workbench.colorTheme": "Base16 Grayscale Light",
    "workbench.startupEditor": "welcomePageInEmptyWorkbench",
    "gitlens.plusFeatures.enabled": false,
    "gitlens.virtualRepositories.enabled": false,
    "gitlens.codeLens.authors.enabled": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.statusBar.format": "${agoOrDate}${' via 'pullRequest}",
    "github.gitProtocol": "ssh",
    "remote.SSH.remotePlatform": {
        "aws-dev": "linux"
    },
    "editor.fontSize": 14,
    "terminal.integrated.fontSize": 13,
    "editor.minimap.showSlider": "always",
    "terminal.integrated.altClickMovesCursor": false,
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.macOptionIsMeta": true,
    "editor.stickyScroll.enabled": false,
    "yaclock.prefix": "",
    "yaclock.showDate": true,
    "yaclock.showDay": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.minimap.size": "fill",
    "editor.cursorSurroundingLines": 5,
    "multiCommand.commands": [
        {
            "command": "multiCommand.down3Lines",
            "sequence": [
                {
                    "command": "cursorMove",
                    "args": { "to": "viewPortBottom", }
                },
                {
                    "command": "cursorMove",
                    "args": {
                        "by": "line",
                        "to": "down",
                        "revealCursor": true,
                        "value": 5,
                    }
                },
            ]
        },
    ],
    "editor.suggestOnTriggerCharacters": true,
    "editor.wordBasedSuggestions": "matchingDocuments",
    "terminal.integrated.gpuAcceleration": "off",
    "editor.inlineSuggest.enabled": true,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.snippetSuggestions": "top",
    "terminal.integrated.enableMultiLinePasteWarning": "never",
    "editor.minimap.enabled": false,
    "bookmarks.gutterIconFillColor": "#c2d7f0",
    "editor.detectIndentation": false,
	"editor.indentSize": "tabSize",
    "editor.insertSpaces": true,
    "window.commandCenter": false,
    "workbench.activityBar.location": "top",
    "cmake.options.advanced": {
        "build": {
            "statusBarVisibility": "visible"
        },
        "launch": {
            "statusBarVisibility": "visible"
        },
        "debug": {
            "statusBarVisibility": "visible"
        }
    },
    "workbench.tree.enableStickyScroll": true,
    "cmake.showOptionsMovedNotification": false,
    "editor.dragAndDrop": false,
    "diffEditor.renderSideBySide": true,
    "gitlens.launchpad.indicator.enabled": false,
    "github.copilot.editor.enableAutoCompletions": true,
    "cmake.pinnedCommands": [
        "workbench.action.tasks.configureTaskRunner",
        "workbench.action.tasks.runTask"
    ],
    "diffEditor.hideUnchangedRegions.enabled": true,
    "gitlens.hovers.enabled": false,
    "editor.hover.sticky": false,
    "editor.hover.hidingDelay": 0,
    "editor.hover.enabled": false,
    "task.autoDetect": "off",
    "VsCodeTaskButtons.showCounter": false,
    "VsCodeTaskButtons.tasks": [
        {
            "label": "$(run-all) Build",
            "task": "bld",
            "tooltip": "🛠️ Start the \"build\" task"
        },
        {
            "label": "$(symbol-unit) Test",
            "task": "test_runner",
        },
        {
            "label": "$(debug-alt) Run",
            "task": "t.sql",
        },
    ],
    "clock.datetimeFormat": "HH:mm",
    "clock.timezone": "Europe/Amsterdam",
}

